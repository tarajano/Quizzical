<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cce6ff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/questionText"
        android:text="Good workout guys!"
        android:textSize="30sp"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttontTrue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#80bfff"
            android:layout_marginRight="10dp"
            android:text="True"/>

        <Button
            android:id="@+id/buttontFalse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#80bfff"
            android:text="False"/>
    </LinearLayout>

    <TextView
        android:id="@+id/anserwText"
        android:text=""
        android:textSize="30sp"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <Button
        android:id="@+id/buttontReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#99ccff"
        android:layout_gravity="center"
        android:text="Reset"/>

    <Button
        android:id="@+id/buttontNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:enabled="false"
        android:background="#99ccff"
        android:layout_gravity="center"
        android:text="Next"/>
</LinearLayout>
